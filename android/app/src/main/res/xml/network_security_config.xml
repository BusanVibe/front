        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">api.busanvibe.site</domain>
        <domain includeSubdomains="true">kauth.kakao.com</domain>
        <domain includeSubdomains="true">dapi.kakao.com</domain>
        <domain includeSubdomains="true">t1.daumcdn.net</domain>
        <domain includeSubdomains="true">tong.visitkorea.or.kr</domain>
        <domain includeSubdomains="true">via.placeholder.com</domain>
    </domain-config>
</network-security-config>


